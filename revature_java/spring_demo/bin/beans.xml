	<bean id="t1" class="com.model.Team">
		<property name="teamId" value="9000"></property>
		<property name="teamName" value="RCB"></property>
	</bean>
	
	<bean id="t2" class="com.model.Team">
		<property name="teamId" value="9001"></property>
		<property name="teamName" value="CSK"></property>
	</bean>
	<bean id="t3" class="com.model.Team">
		<property name="teamId" value="9003"></property>
		<property name="teamName" value="DC"></property>
	</bean>
	<bean id="t4" class="com.model.Team">
		<property name="teamId" value="9002"></property>
		<property name="teamName" value="SRH"></property>
	</bean>
	
	
	<bean id="p1" class="com.model.Player">
		<property name="id" value="100"></property>
		<property name="name" value="Sachin"></property>
		<property name="teamList" >
		<list>
		<ref bean="t2"/>
		<ref bean="t3"/>
		<ref bean="t4"/>
		</list>
		</property>	
	</bean>

	<bean id="p2" class="com.model.Player">
		<constructor-arg name="id" value="101"></constructor-arg>
		<constructor-arg name="name" value="Tendulkar"></constructor-arg>
		<property name="teamList">
		<list>
		<ref bean="t1"/>
		</list>
		</property>	
	</bean>

</beans>
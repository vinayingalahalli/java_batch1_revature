package buffer;

public class Palindrome {

	public static void main(String[] args) {
		
		String s="madam";
		

	}
	
	public static boolean isPalindrome(String s) {
		boolean b=false;
		StringBuffer sb=new StringBuffer(s);
		sb.reverse();
		String s2=sb.toString();
		if(s.equals(s2)) {
			b=true;
		}
		return b;
	}

}
